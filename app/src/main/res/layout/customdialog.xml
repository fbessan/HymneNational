    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="#fff"
        android:layout_weight="1">

        <!--<Button
            android:id="@+id/dialogButtonEcouter"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ecouter"
            android:background="@color/colorPrimary"
            android:drawableLeft="@mipmap/ic_av_play_arrow"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:height="0dp"
            android:padding="0dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_below="@+id/imagenote"
            />-->

        <Button
            android:id="@+id/dialogButtonEcouter"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Ecouter"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/imagenote"
            />

        <Button
            android:id="@+id/dialogButtonEcouterStop"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ecouter"
            android:background="@color/colorPrimary"
            android:drawableLeft="@mipmap/ic_av_stop"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:height="0dp"
            android:padding="0dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_below="@+id/imagenote"
            />


        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/dialogButtonOK"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Quitter"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/imagenote"
            />

    </LinearLayout>


</LinearLayout>